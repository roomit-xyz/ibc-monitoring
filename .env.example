# Database Configuration
DATABASE_PATH=./database/ibc_monitor.db

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Session Configuration
SESSION_SECRET=change-this-in-production-very-secure-session-secret
SESSION_TIMEOUT=24

# Security Configuration
JWT_SECRET=change-this-in-production-jwt-secret
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Authentication Configuration
AUTH_METHOD=ldap
# Options: sqlite, ldap

# LDAP Configuration (only if AUTH_METHOD=ldap)
LDAP_SERVER=ldap://host
LDAP_PORT=3890
LDAP_BIND_DN=uid=admin,ou=people,dc=host,dc=com
LDAP_BIND_PASSWORD=xcxxxxxxxxxxxx
LDAP_USER_SEARCH_BASE=ou=users,dc=host,dc=com
LDAP_USER_SEARCH_FILTER=(uid={username})
LDAP_USER_ATTRIBUTES=uid,cn,mail,memberOf
# LDAP_TLS_ENABLED=false
# LDAP Group-based Role Assignment
# Users in these groups will have admin privileges
LDAP_ADMIN_GROUPS=cn=lldap_admin,ou=groups,dc=host,dc=com
# Users in these groups will have monitoring privileges
LDAP_MONITORING_GROUPS=cn=lldap_web_admin,ou=groups,dc=host,dc=com

# Default Metrics Sources
DEFAULT_HERMES_URL=http://127.0.0.1:3001
DEFAULT_METRICS_URL=http://127.0.0.1:4001/metrics
DEFAULT_REFRESH_INTERVAL=10

# Gotify Configuration (Global defaults - can be overridden per user)
# GOTIFY_DEFAULT_URL=
# GOTIFY_DEFAULT_TOKEN=
GOTIFY_ENABLED=false

# Alert Configuration
ALERT_PENDING_WARNING=10
ALERT_PENDING_CRITICAL=50
ALERT_FAILED_PACKETS=1
ALERT_BALANCE_THRESHOLD=20

# Wallet Monitoring Configuration
WALLET_REFRESH_INTERVAL=60
WALLET_LOW_BALANCE_USD=10
WALLET_CRITICAL_BALANCE_USD=5

# Chain API Endpoints (optional - for local nodes)
# COSMOSHUB-4_REST_ENDPOINT=http://localhost:1317
# OSMOSIS-1_REST_ENDPOINT=http://localhost:1317
# JUNO-1_REST_ENDPOINT=http://localhost:1317

# Security Headers
ENABLE_HTTPS=false
# SSL_CERT_PATH=
# SSL_KEY_PATH=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/ibc-monitor.log

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60
METRICS_RETENTION_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# WebSocket Configuration  
WS_ENABLED=true
WS_HEARTBEAT_INTERVAL=30

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_HEADERS=Content-Type,Authorization

# Static Files
STATIC_PATH=./public
UPLOADS_PATH=./uploads
MAX_FILE_SIZE=10485760

# Development Configuration
DEV_MODE=true
DEBUG_QUERIES=false
HOT_RELOAD=false