{
  "name": "ibc-monitor",
  "version": "1.0.0",
  "description": "IBC Hermes monitoring application with authentication and multi-source metrics",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-database.js",
    "build": "npm run build-css && npm install",
    "build-css": "npx tailwindcss -i ./src/css/input.css -o ./public/css/tailwind.css --minify",
    "watch-css": "npx tailwindcss -i ./src/css/input.css -o ./public/css/tailwind.css --watch",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "ibc",
    "hermes",
    "monitoring",
    "blockchain",
    "cosmos"
  ],
  "author": "PT Roomit Trimiko Digital",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "ldapjs": "^3.0.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.17"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/roomit-xyz/ibc-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/roomit-xyz/ibc-monitor/issues"
  },
  "homepage": "https://roomit.xyz"
}
